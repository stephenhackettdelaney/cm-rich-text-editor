{
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.jsx",
        "types/**/*.d.ts",
        "components/TiptapEditor.tsx",
        "icons/index.js"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "example"
    ],
    // -------------------------
    "compilerOptions": {
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2019"
        ],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "target": "es2019",
        "module": "esnext",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "strict": false,
        "noImplicitAny": false,
        "noUncheckedIndexedAccess": true,
        "noEmit": false,
        "declaration": true,
        "outDir": "./lib",
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "components/*",
                "icons/*"
            ],
        },
    },
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "nodenext",
        }
    }
}